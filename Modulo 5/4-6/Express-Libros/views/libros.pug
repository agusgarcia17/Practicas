extends layout

block content
  h1= title
  ul
    for libro in librosArray
        li
            figure
                img(src=libro.src)
                figcaption= libro.info
                figcaption= libro.precio
            div#boton
                button(class='borrar' data-id=libro.codigo) Borrar
                button(class='editar' data-edit=libro.codigo) Editar